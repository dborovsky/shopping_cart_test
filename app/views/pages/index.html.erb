<h1>Product`s list</h1>

<div class="layout">
			<section class="inner">
				<ul class="grid list-items">
					<% @items.each do |item| %>
						<li class="grid-tile">
							<div class="item">
								<div class="item-img" style="background-image: url('https://www.momastore.org/wcsstore/MOMASTORE1/images/products/96511_A2_Print_NYC_8x10_In.jpg'); background-size: auto auto; background-size: 150%; background-position: center 30%;"></div>
								<div class="item-pnl">
									<div class="pnl-wrapper">
										<div class="pnl-description">
											<span class="pnl-label"><%= item.name %></span>
											<span class="pnl-price"><%= item.price %></span>
										</div>
										<div>
											<%= button_to "Add to cart", '#', {class: "btn btn-danger btn-cart"} %>	
										</div>
									</div>
								</div>
							</div>
						</li>
					<% end %>	
				</ul>
			</section>
		</div>